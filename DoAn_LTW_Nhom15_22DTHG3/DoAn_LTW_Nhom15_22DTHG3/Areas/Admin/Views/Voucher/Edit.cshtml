@model DoAn_LTW_Nhom15_22DTHG3.Models.Voucher
@{
    ViewData["Title"] = "Chỉnh sửa mã khuyến mãi";
}

<h2>✏️ Chỉnh sửa mã khuyến mãi</h2>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label class="form-label">Mã Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Mô tả</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Phần trăm giảm (%)</label>
        <input asp-for="DiscountPercent" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Giảm tối đa</label>
        <input asp-for="MaxDiscountAmount" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Hoạt động</label>
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
