<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            background-color: #ffffff;
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #1f2937;
        }

        .sidebar {
            width: 250px;
            background-color: #4b5563;
            border-right: 1px solid #6b7280;
            position: fixed;
            top: 0;
            bottom: 0;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            z-index: 1000;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: #e5e7eb;
                text-decoration: none;
                transition: background 0.2s, color 0.2s;
            }

                .sidebar a:hover {
                    background-color: #6b7280;
                    color: #93c5fd;
                }

            .sidebar .nav-item.active a {
                background-color: #2563eb;
                color: #ffffff;
                font-weight: 500;
                border-radius: 5px;
                margin: 0 10px;
            }

            .sidebar .btn-light {
                background-color: #6b7280;
                color: #f87171;
                border: none;
            }

                .sidebar .btn-light:hover {
                    background-color: #7b8794;
                    color: #ef4444;
                }

            .sidebar h4 {
                color: #ffffff;
            }

        .content {
            margin-left: 250px;
            padding: 30px;
            flex-grow: 1;
            width: calc(100% - 250px);
            background-color: #ffffff;
        }

        .sidebar-toggle {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
            background-color: #2563eb;
            color: #fff;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
        }

        @@media (max-width: 992px) {
            .sidebar {
                width: 250px;
                transform: translateX(-250px);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .content {
                margin-left: 0;
                width: 100%;
            }

            .sidebar-toggle {
                display: block;
            }
        }

        @@media (max-width: 576px) {
            .sidebar {
                width: 80%;
                max-width: 250px;
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .sidebar-toggle {
                padding: 6px 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle" onclick="toggleSidebar()"><i class="bi bi-list"></i></button>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center py-3 border-bottom">Admin Panel</h4>
        <nav>
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a href="@Url.Action("Index", "ProductManager", new { area = "Admin" })"><i class="bi bi-box-seam"></i> Quản lý Phòng</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "CategoryManager", new { area = "Admin" })"><i class="bi bi-folder2"></i> Quản lý Danh mục</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "User", new { area = "Admin" })"><i class="bi bi-people"></i> Quản lý Người dùng</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Order", new { area = "Admin" })"><i class="bi bi-receipt"></i> Quản lý Đơn hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Voucher" asp-action="Create">
                        Thêm mã giảm giá
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Identity" asp-page="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a>                  
                    <a href="/Product" class="btn btn-secondary mt-3"><i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách</a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>