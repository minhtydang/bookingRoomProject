@model DoAn_LTW_Nhom15_22DTHG3.Models.Product
<div class="container mt-5">
    <h2 class="text-center text-white bg-black p-3 rounded-top">Thêm Sản Phẩm</h2>
    <div class="card bg-light p-4 shadow-lg">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="row g-3">
                <!-- Product Name -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Tên Sản Phẩm:</label>
                        <input type="text" asp-for="Name" class="form-control border-yellow" placeholder="Nhập tên sản phẩm" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Price -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Giá:</label>
                        <input type="number" asp-for="Price" class="form-control border-yellow" placeholder="Nhập giá sản phẩm" min="0" step="0.01" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Mô Tả:</label>
                        <textarea asp-for="Description" class="form-control border-yellow" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                    </div>
                </div>

                <!-- Location Information -->
                <div class="col-12">
                    <h4 class="text-black fw-bold border-bottom border-yellow pb-2">Thông Tin Vị Trí</h4>
                </div>

                <!-- Address -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Địa Chỉ:</label>
                        <input type="text" asp-for="Address" class="form-control border-yellow" placeholder="Nhập địa chỉ chi tiết" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <!-- Region -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Khu Vực:</label>
                        <input type="text" asp-for="Region" class="form-control border-yellow" placeholder="Nhập khu vực (VD: Quận 1, TP.HCM)" />
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                </div>

                <!-- Area -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Diện Tích (m²):</label>
                        <input type="number" asp-for="Area" class="form-control border-yellow" placeholder="Nhập diện tích" min="0" step="0.01" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                </div>

                <!-- Latitude -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Vĩ Độ:</label>
                        <input type="number" asp-for="Latitude" class="form-control border-yellow" placeholder="VD: 10.762622" step="0.000001" />
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                    </div>
                </div>

                <!-- Longitude -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Kinh Độ:</label>
                        <input type="number" asp-for="Longitude" class="form-control border-yellow" placeholder="VD: 106.660172" step="0.000001" />
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                    </div>
                </div>

                <!-- Main Image -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Ảnh Chính:</label>
                        <input type="file" name="ImageFile" class="form-control border-yellow" accept="image/*" />
                    </div>
                </div>

                <!-- Extra Images -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Ảnh Phụ (Chọn Nhiều):</label>
                        <input type="file" name="ExtraImageFiles" class="form-control border-yellow" multiple id="extraImagesInput" accept="image/*" />
                        <div id="extraImagesPreview" class="d-flex flex-wrap mt-3 gap-2"></div>
                    </div>
                </div>

                <!-- Category -->
                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label text-black fw-bold">Danh Mục:</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control border-yellow" required>
                            <option value="">-- Chọn Danh Mục --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-success btn-lg px-5 py-3 text-white" style="background-color: red; border: 2px solid yellow;">
                        <i class="bi bi-plus-circle"></i> Thêm Sản Phẩm
                    </button>
                    <a asp-area="Admin/ProductManager/Index" asp-controller="ProductManager" asp-action="Index" class="btn btn-secondary btn-lg px-5 py-3 text-white" style="background-color: black; border: 2px solid yellow;">
                        <i class="bi bi-arrow-left-circle"></i> Quay Lại Danh Sách
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('extraImagesInput').addEventListener('change', function (event) {
            const previewContainer = document.getElementById('extraImagesPreview');
            previewContainer.innerHTML = ""; // Xóa ảnh cũ

            const files = Array.from(event.target.files);

            files.forEach((file, index) => {
                const reader = new FileReader();

                reader.onload = function (e) {
                    const wrapper = document.createElement('div');
                    wrapper.className = 'position-relative';

                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'rounded border';
                    img.style = 'width:120px; height:120px; object-fit:cover; border: 2px solid yellow;';

                    const btn = document.createElement('button');
                    btn.textContent = '×';
                    btn.type = 'button';
                    btn.className = 'btn btn-danger btn-sm position-absolute top-0 end-0';
                    btn.style = 'padding: 2px 6px; background-color: red; border: 1px solid yellow;';
                    btn.onclick = function () {
                        files.splice(index, 1);
                        const dt = new DataTransfer();
                        files.forEach(f => dt.items.add(f));
                        event.target.files = dt.files;
                        event.target.dispatchEvent(new Event('change'));
                    };

                    wrapper.appendChild(img);
                    wrapper.appendChild(btn);
                    previewContainer.appendChild(wrapper);
                };

                reader.readAsDataURL(file);
            });
        });
    </script>
}