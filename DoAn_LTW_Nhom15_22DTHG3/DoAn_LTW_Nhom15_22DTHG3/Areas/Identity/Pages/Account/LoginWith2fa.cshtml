@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<h1>@ViewData["Title"]</h1>
<p>Nhập mã xác thực đã gửi đến email của bạn.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" aria-required="true" placeholder="Mã xác thực" />
                <label asp-for="Input.Code" class="form-label">Mã xác thực</label>
                <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Xác nhận</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 