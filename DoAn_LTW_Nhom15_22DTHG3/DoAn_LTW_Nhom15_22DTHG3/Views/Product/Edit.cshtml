@model DoAn_LTW_Nhom15_22DTHG3.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h2>Chỉnh sửa sản phẩm</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- Location Information -->
    <div class="form-group">
        <h4>Thông Tin Vị Trí</h4>
    </div>

    <div class="form-group">
        <label asp-for="Address">Địa chỉ:</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Nhập địa chỉ chi tiết" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Region">Khu vực:</label>
        <input type="text" asp-for="Region" class="form-control" placeholder="Nhập khu vực (VD: Quận 1, TP.HCM)" />
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Area">Diện tích (m²):</label>
        <input type="number" asp-for="Area" class="form-control" placeholder="Nhập diện tích" min="0" step="0.01" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Latitude">Vĩ độ:</label>
        <input type="number" asp-for="Latitude" class="form-control" placeholder="VD: 10.762622" step="0.000001" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Longitude">Kinh độ:</label>
        <input type="number" asp-for="Longitude" class="form-control" placeholder="VD: 106.660172" step="0.000001" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Danh mục</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>

    <!-- Ảnh chính hiện tại -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        var imageUrl = Url.Content("~/" + Model.ImageUrl.TrimStart('/'));
        <div class="form-group">
            <label>Ảnh chính hiện tại:</label><br />
            <img src="@imageUrl" style="max-width: 200px; height:auto;" />
        </div>
    }

    <!-- Upload ảnh chính mới -->
    <div class="form-group">
        <label>Ảnh chính mới:</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    <!-- Ảnh phụ hiện tại với checkbox giữ lại -->
    @if (!string.IsNullOrEmpty(Model.ExtraImageUrls))
    {
        <div class="form-group">
            <label>Ảnh phụ hiện tại:</label>
            <div class="row">
                @foreach (var url in Model.ExtraImageUrls.Split(","))
                {
                    var fileName = System.IO.Path.GetFileName(url);
                    var formattedUrl = Url.Content("~/" + url.TrimStart('/'));
                    <div class="col-md-3 text-center mb-3">
                        <img src="@formattedUrl" style="width:100%; height:150px; object-fit:cover;" />
                        <div class="form-check mt-1">
                            <input type="checkbox" name="KeepExtraImages" value="@fileName" class="form-check-input" checked />
                            <label class="form-check-label">Giữ ảnh</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Upload ảnh phụ mới -->
    <div class="form-group">
        <label>Ảnh phụ mới:</label>
        <input type="file" name="ExtraImageFiles" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>

@section Scripts {
    @{
        Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}