@using DoAn_LTW_Nhom15_22DTHG3.Extensions
@model Order
@{
    ViewData["Title"] = "Thanh toán";
}

<h2 class="mb-4">Thông tin đơn hàng</h2>

<div class="row">
    <div class="col-md-7">
        <form asp-action="Checkout" method="post" class="card p-4 shadow-sm mb-4">
            <div class="mb-3">
                <label asp-for="ShippingAddress" class="form-label">Tên người nhận</label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Ghi chú</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Xác nhận đặt hàng</button>
                <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-secondary">Quay lại giỏ hàng</a>
            </div>
        </form>
    </div>
    <div class="col-md-5">
        <div class="card shadow-sm p-3 mb-4">
            <h5 class="fw-bold mb-3">Tóm tắt đơn hàng</h5>
            @if (Context.Session.GetObjectFromJson<ShoppingCart>("Cart") is ShoppingCart cart && cart.Items.Any())
            {
                <table class="table table-sm mb-2">
                    <thead>
                        <tr>
                            <th>Phòng</th>
                            <th>Ngày</th>
                            <th>Đơn giá/ngày</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in cart.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@((item.Price * 0.05m).ToString("N0"))</td>
                                <td>@(((item.Price * 0.05m) * item.Quantity).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="mb-2">
                    <span class="fw-bold">Tổng tiền:</span> @cart.TotalBeforeDiscount.ToString("N0") VNĐ
                </div>
                @if (!string.IsNullOrEmpty(cart.VoucherCode) && cart.DiscountAmount > 0)
                {
                    <div class="mb-2 text-success">
                        <span>Giảm giá (@cart.VoucherCode):</span> -@cart.DiscountAmount.ToString("N0") VNĐ
                    </div>
                }
                <div class="mb-2">
                    <span class="fw-bold text-primary">Tổng thanh toán:</span> @cart.TotalAfterDiscount.ToString("N0") VNĐ
                </div>
            }
            else
            {
                <div class="alert alert-info">Giỏ hàng trống.</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
